{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "Hello Compliance App",
		"description": "Basic API for hello-compliance-app",
		"license": {
			"name": "Copyright 2014-2021 IBM",
			"url": "https://github.com/open-toolchain/hello-compliance-app/blob/master/License.txt"
		}
	},
	"basePath": "/",
	"schemes": [
		"http"
	],
	"consumes": [
		"application/json"
	],
	"produces": [
		"application/json",
		"text/html"
	],
	"paths": {
		"/health": {
			"get": {
				"summary": "Get Application Health",
				"responses": {
					"200": {
						"description": "OK"
					}
				}
			}
		},
		"/auth/health": {
			"get": {
				"summary": "Get application health as an authenticated route",
				"parameters": [
					{
						"name": "Authorization",
					  	"in": "header",
					  	"description": "Bearer token or basic auth",
					  	"required": true,
					  	"schema": {
							"type": "string"
					  	}
					}
				],
				"responses": {
					"200": {
						"description": "OK"
					}
				}
			}
		},
		"/airports": {
			"get": {
				"summary": "Get list of airports with search facility",
				"parameters": [
					{
						"name": "q",
						"in": "query",
						"required": false,
						"description": "Search key for the airports",
						"type": "string"
					},
					{
						"name": "page",
						"in": "query",
						"required": false,
						"description": "Page number for airports listing",
						"type": "string"
					},
					{
						"name": "per_page",
						"in": "query",
						"required": false,
						"description": "Page size for aiports listing",
						"type": "string"
					}
				],
				"responses": {
					"200": {
						"description": "OK"
					},
					"404": {
						"description": "Airport / City not found"
					}
				}
			}
		}
	}
}